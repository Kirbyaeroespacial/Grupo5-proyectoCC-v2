{
	"name": "Python and Arduino Development",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.8-bullseye",
	"features": {
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.8",
			"installTools": true
		},
		"ghcr.io/devcontainers/features/git:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/arduino:1": {
			"version": "latest"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"vscode.git",
				"ms-vscode.live-server",
				"vsciot-vscode.vscode-arduino",
				"platformio.platformio-ide"
			],
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"python.linting.enabled": true,
				"python.formatting.provider": "black",
				"editor.formatOnSave": true,
				"python.linting.pylintEnabled": true,
				"arduino.path": "/usr/local/arduino",
				"arduino.useArduinoCli": true,
				"arduino.logLevel": "info",
				"arduino.enableUSBDetection": true,
				"C_Cpp.intelliSenseEngine": "Tag Parser"
			}
		}
	},
	"postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt && arduino-cli core update-index && arduino-cli core install arduino:avr",
	"remoteUser": "vscode",
	"runArgs": [
		"--device=/dev/ttyUSB0",
		"--device=/dev/ttyACM0"
	],
	"mounts": [
		"source=/dev/,target=/dev/,type=bind,consistency=consistent"
	]
}
